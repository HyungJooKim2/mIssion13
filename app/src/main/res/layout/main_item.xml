<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mcr_img1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/dal_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mcr_img1"
                tools:text="01"
                android:textColor="@color/title"/>

            <TextView
                android:id="@+id/mcr_brand_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintStart_toEndOf="@id/dal_id"
                app:layout_constraintTop_toBottomOf="@id/mcr_img1"
                tools:text="현대"
                android:textColor="@color/title"
                />

            <TextView
                android:id="@+id/mcr_model_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/mcr_brand_nm"
                app:layout_constraintTop_toBottomOf="@+id/mcr_img1"
                tools:text="봉고"
                android:textColor="@color/title"
                />

            <TextView
                android:id="@+id/mcr_lcd_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/mcr_model_nm"
                app:layout_constraintTop_toBottomOf="@id/mcr_img1"
                tools:text="카고"
                android:textColor="@color/title"
                />

            <TextView
                android:id="@+id/mcr_ton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/mcr_lcd_nm"
                app:layout_constraintTop_toBottomOf="@id/mcr_img1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                tools:text="6톤"
                android:textColor="@color/title"
                />

            <TextView
                android:id="@+id/mcr_addr1_nm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/description"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mcr_brand_nm"
                app:layout_constraintEnd_toStartOf="@id/mcr_addr2_nm"
                tools:text="서울ddddd"
                android:textSize="11sp"
                />

            <TextView
                android:id="@+id/mcr_addr2_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/description"
                app:layout_constraintStart_toEndOf="@id/mcr_addr1_nm"
                app:layout_constraintTop_toBottomOf="@id/mcr_brand_nm"
                app:layout_constraintEnd_toStartOf="@id/mcr_km"
                tools:text="강남구0000000000000"
                android:textSize="11sp"
                />

<!--            <TextView-->
<!--                android:id="@+id/bar"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="|"-->
<!--                android:layout_marginLeft="5dp"-->
<!--                android:layout_marginTop="2dp"-->
<!--                android:textSize="11sp"-->
<!--                app:layout_constraintStart_toEndOf="@+id/mcr_addr2_nm"-->
<!--                app:layout_constraintTop_toBottomOf="@id/mcr_brand_nm"-->

<!--                />-->

            <TextView
                android:id="@+id/mcr_km"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/description"
                app:layout_constraintStart_toEndOf="@id/mcr_addr2_nm"
                app:layout_constraintTop_toBottomOf="@id/mcr_brand_nm"
                app:layout_constraintEnd_toStartOf="@+id/mcr_price"
                tools:text="90000km"
                android:textSize="11sp"
                />

            <TextView
                android:id="@+id/mcr_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/price"
                android:textSize="15sp"
                android:layout_marginRight="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mcr_km"
                app:layout_constraintTop_toBottomOf="@+id/mcr_brand_nm"
                tools:text="43800000000만원"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>